<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jon.pollApp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
    
    <!-- Internet Permissions -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.jon.pollApp.LaunchPoll"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.jon.pollApp.Option1"></activity>
        <activity android:name="com.jon.pollApp.Option2"></activity>
        <activity android:name="com.jon.pollApp.Option3"></activity>
        <activity android:name="com.jon.pollApp.Option4"></activity>
        <activity android:name="com.jon.pollApp.PollCodeActivity"></activity>
        
    </application>

</manifest>
