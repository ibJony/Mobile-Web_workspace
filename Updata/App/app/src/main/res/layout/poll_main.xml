<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/lblMessage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="16dip"
            android:layout_margin="10dip"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to MyPoll Application"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/lblMessage"
            android:paddingBottom="30dip"
            android:textColor="#21dbd4"
            android:textStyle="bold"
            android:textSize="20dip" />


        <Button android:id="@+id/btnSubmit"
            android:text="Search PollCode"
            android:background="#20b392"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="10dip"
            android:layout_below="@+id/tv_message"
            />

        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Select PollCode"
            android:layout_marginTop="20dip"
            android:id="@+id/tv_select_poll"
            android:layout_below="@+id/btnSubmit"/>

        <Spinner android:id="@+id/spinFood"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:prompt="@string/prompt"
            android:spinnerMode="dialog"
            android:layout_below="@+id/tv_select_poll"/>

    </RelativeLayout>


</RelativeLayout>