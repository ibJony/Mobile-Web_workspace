<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="vertical">
    
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView"
            android:layout_alignParentTop="true" 
            android:layout_alignParentLeft="true"
            android:layout_above="@+id/footer_layout"
        	android:dividerHeight="1dp"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/footer"
        android:layout_alignParentBottom="true"
        android:id="@+id/footer_layout"
        android:background="#e5f8ff"
        android:orientation="horizontal">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/cat_text"
            android:text="@string/apprecciate"/>
        <ImageView
            android:layout_width="72px"
            android:layout_height="72px"
            android:layout_alignParentBottom="true"
            android:id="@+id/icon1"
            android:layout_below="@+id/cat_text"
            android:src="@drawable/ic_pages"/>

        <ImageView
            android:layout_width="72px"
            android:layout_height="72px"
            android:src="@drawable/ic_daily"
            android:id="@+id/icon2"
            android:layout_below="@+id/cat_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="72px"
            android:layout_height="72px"
            android:src="@drawable/ic_capital_fm"
            android:id="@+id/icon3"
            android:layout_alignTop="@+id/icon2"
            android:layout_toRightOf="@+id/icon2"
            android:layout_toEndOf="@+id/icon2" />

        <ImageView
            android:layout_width="72px"
            android:layout_height="72px"
            android:src="@drawable/ic_nairobi"
            android:id="@+id/icon4"
            android:layout_alignTop="@+id/icon3"
            android:layout_toRightOf="@+id/icon3"
            android:layout_toEndOf="@+id/icon3" />

        <ImageView
            android:layout_width="72px"
            android:layout_height="72px"
            android:src="@drawable/ic_people"
            android:id="@+id/icon5"
            android:layout_alignTop="@+id/icon4"
            android:layout_toRightOf="@+id/icon4"
            android:layout_toEndOf="@+id/icon4" />

        <ImageView
            android:layout_width="72px"
            android:layout_height="72px"
            android:src="@drawable/ic_standard"
            android:id="@+id/icon6"
            android:layout_alignTop="@+id/icon4"
            android:layout_toRightOf="@+id/icon4"
            android:layout_toEndOf="@+id/icon4" />

        <ImageView
            android:layout_width="72px"
            android:layout_height="72px"
            android:src="@drawable/ic_star"
            android:id="@+id/icon7"
            android:layout_alignTop="@+id/icon5"
            android:layout_toRightOf="@+id/icon5"
            android:layout_toEndOf="@+id/icon5" />

        <ImageView
            android:layout_width="72px"
            android:layout_height="72px"
            android:src="@drawable/ic_news"
            android:id="@+id/icon8"
            android:layout_alignTop="@+id/icon6"
            android:layout_toRightOf="@+id/icon6"
            android:layout_toEndOf="@+id/icon6" />

    </RelativeLayout>
</RelativeLayout>
