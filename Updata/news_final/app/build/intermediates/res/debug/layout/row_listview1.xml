<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="120dp"
    android:padding="8dp"
    android:background="@drawable/bg_parent_rounded_corner">
    
    
    
     <!-- News Title -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/img"
        android:layout_toLeftOf="@id/txtTitle"
        android:layout_marginLeft="15dp"
        android:textSize="@dimen/title"
        android:layout_gravity="left|center_vertical"
        android:textStyle="bold" />
    
    <!-- Thumbnail Image -->
    
    <ImageView
        android:id="@+id/img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/txtTitle"
        android:src="@drawable/ic_pages" />
     
    <!-- Descrip -->
    

     <TextView
         android:id="@+id/txtDesc"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/txtTitle"
         android:textColor="@color/descrip"
         android:textSize="@dimen/descrip"
         android:layout_gravity="left|center_vertical"
         android:minLines="2" android:ellipsize="end" android:maxLines="4" />
 
    <!-- Release Year -->

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="@+id/txtDesc"
        android:layout_below="@+id/txtDesc"
        android:textColor="@color/created_at" />

</RelativeLayout>
